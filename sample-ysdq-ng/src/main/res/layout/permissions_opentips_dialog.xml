<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_round_corner_white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="94dp"
        android:scaleType="fitXY"
        android:src="@drawable/permissions_top_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp">

        <ImageView
            android:id="@+id/iv_permission_phone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/permission_phone_icon" />

        <TextView
            android:id="@+id/tv_permission_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/iv_permission_phone"
            android:text="手机/电话权限"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_permission_phone"
            android:layout_alignLeft="@id/tv_permission_phone"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:text="校验手机识别码，防止账号被盗"
            android:textColor="#66000000"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp">

        <ImageView
            android:id="@+id/iv_permission_storage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/permission_storage_icon" />

        <TextView
            android:id="@+id/tv_permission_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/iv_permission_storage"
            android:text="存储权限"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_permission_storage"
            android:layout_alignLeft="@id/tv_permission_storage"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:text="缓存图片和视频，降低流量消耗"
            android:textColor="#66000000"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="23dp">

        <ImageView
            android:id="@+id/iv_permission_location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/permission_location_icon" />

        <TextView
            android:id="@+id/tv_permission_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/iv_permission_location"
            android:text="定位权限"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_permission_location_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_permission_location"
            android:layout_alignLeft="@id/tv_permission_location"
            android:layout_marginTop="4dp"
            android:layout_marginRight="20dp"
            android:text="根据所在地，推荐本地精彩影片"
            android:textColor="#66000000"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_permission_location_tips"
            android:layout_alignLeft="@id/tv_permission_location_tips"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="*开启权限，确保正常使用视频聚合极速版"
            android:textColor="#66000000"
            android:textSize="9sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/open_now_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="现在开启"
        android:textColor="#3599F8"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="#1A000000" />

</LinearLayout>
